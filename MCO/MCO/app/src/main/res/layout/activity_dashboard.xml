        <LinearLayout
            android:id="@+id/llHealth"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/inputs"
            android:gravity="center"
